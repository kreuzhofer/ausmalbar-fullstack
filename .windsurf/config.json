{
  "name": "ausmalbar-fullstack",
  "description": "Ausmalbar Fullstack Application",
  "type": "docker-compose",
  "dockerComposeFile": ["docker-compose.yml", "docker-compose.override.yml"],
  "service": "web",
  "workspaceFolder": "/app",
  "shutdownAction": "stopCompose",
  "customizations": {
    "commands": {
      "start": "docker-compose up -d",
      "stop": "docker-compose stop",
      "down": "docker-compose down",
      "logs": "docker-compose logs -f"
    },
    "postStartCommand": "echo 'Docker environment is ready! Run `docker-compose logs -f` to follow logs.'"
  },
  "extensions": [
    "ms-azuretools.vscode-docker",
    "ms-python.python"
  ]
}
